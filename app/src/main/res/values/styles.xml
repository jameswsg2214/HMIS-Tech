<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColor">@color/navColor</item>
    </style>

    <style name="Hmis.Login" parent="AppTheme">
        <item name="android:windowBackground">@drawable/login_bg</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.MySubheader">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Hmis.LoginTablet" parent="AppTheme">
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Hmis.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/login_bg</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Hmis.SplashTablet" parent="AppTheme">
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlackTextInputLayout" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/navColor</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/outPtientGreen</item>

        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#70221F1F</item>
    </style>


    <style name="commonCardView">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">@dimen/common_card_view_dimens</item>
        <item name="android:layout_height">@dimen/common_card_view_dimens</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">@dimen/common_card_view_radius</item>
    </style>



    <!-- text -->

