<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.oasys.digihealth.tech.ui.lmis.lmisTestApprovel.viewModel.LabTestApprovalViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="345dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        android:padding="15dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/hmis_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight=".5"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Lab Result Approval"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <ImageView

                android:id="@+id/closeImageView"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".1"
                android:paddingStart="10dp"
                android:src="@drawable/ic_close_white"
                tools:ignore="RtlCompat,VectorDrawableCompat" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:ignore="MissingDefaultResource">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext_border_white"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.40"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="S.No"
                    android:textColor="@color/black"
                    android:textSize="11sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.30"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Test/Profile name"
                    android:textColor="@color/black"
                    android:textSize="11sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.70"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Result"
                    android:textColor="@color/black"
                    android:textSize="10sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.60"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="UOM"
                    android:textColor="@color/black"
                    android:textSize="11sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Normal val"
                    android:textColor="@color/black"
                    android:textSize="11sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/analytiesview"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext_border_white"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/serialNumberTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.40"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text=""
                    android:textSize="11sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <TextView
                    android:id="@+id/textProcess"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.30"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Test/Profile name"
                    android:textColor="@color/black"
                    android:textSize="11sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <Spinner
                    android:id="@+id/result_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.70"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/resultData"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.70"
                    android:inputType="number"
                    android:singleLine="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/resultDataAlphanumeric"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.70"
                    android:digits="abcdefghijklmnopqrstuvwzyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                    android:singleLine="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/resultDataSplcase"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.70"
                    android:singleLine="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/resultDataNoneditable"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.70"
                    android:focusable="false"
                    android:singleLine="true"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/resultLongText"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1.70"
                    android:visibility="gone" />


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />

                <TextView
                    android:id="@+id/uom_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.60"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"

                    android:text=""
                    android:textSize="11sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


                <TextView
                    android:id="@+id/normal_val_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text=""
                    android:textSize="11sp">

                </TextView>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view" />


            </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/resultRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:text="Authorization Status *"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/assigned_to_spinner"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Test"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/monile_no_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:hint="Remarks"

                        android:inputType="textNoSuggestions"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/_3sdp"
                    tools:ignore="RtlCompat">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/approved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/outPtientGreen"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_thumb"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:paddingTop="7dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="7dp"
                            android:text="Approve"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/retest"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/yellow"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:drawableLeft="@drawable/ic_thumb"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:paddingTop="7dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="7dp"
                            android:text="retest"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/reject"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        app:cardBackgroundColor="@color/red"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_thumbdown"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:paddingTop="7dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="7dp"
                            android:text="Reject"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cancelCardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        app:cardBackgroundColor="@color/grey"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_close_white_12"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="15dp"
                            android:paddingTop="7dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="7dp"
                            android:text="Cancel"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>



        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>