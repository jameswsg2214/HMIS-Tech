<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.hmis_tn.lims.ui.lmis.sampleDispatch.viewModel.SampleDispatchViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:openDrawer="end">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="RtlCompat"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/searchDrawerCardView"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="Sample Dispatch"
                        android:textColor="@color/hmis_background"
                        android:textSize="@dimen/_15sdp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/searchDrawerCardView"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="22dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_favourite_back_arrow"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/manage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@android:color/white"
                    tools:ignore="MissingDefaultResource">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvLabTestTop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@android:color/white"
                            tools:ignore="MissingDefaultResource">


                            <LinearLayout
                                android:id="@+id/above"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/red"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/positiveTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="11sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="center"
                                        android:text="Sample Transferred"
                                        android:textColor="@color/white">

                                    </TextView>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@color/save"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/negativeTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"

                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="11sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="center"
                                        android:text="Sample Received"
                                        android:textColor="@color/white">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@color/Skyblue"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/equivocalTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="11sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="center"
                                        android:text="Sample In Transit"
                                        android:textColor="@color/white">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@color/grey"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/rejectedTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="11sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins"
                                        android:text="Rejected"
                                        android:textColor="@color/white">

                                    </TextView>

                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/llLabTestBottom"
                            android:layout_below="@+id/cvLabTestTop"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:id="@+id/llLabTestCenter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.85"
                                tools:ignore="Suspicious0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="410dp"
                                    android:layout_marginBottom="20dp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="7dp"
                                        app:cardBackgroundColor="@color/white"
                                        app:cardElevation="2dp">


                                        <HorizontalScrollView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp">


                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <LinearLayout
                                                    android:layout_width="530dp"
                                                    android:layout_height="35dp"
                                                    android:background="@drawable/edittext_border_white"
                                                    android:orientation="horizontal"
                                                    android:weightSum="6">

                                                    <CheckBox
                                                        android:id="@+id/selectAllCheckBox"
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="0.40"
                                                        android:textColor="@color/navColor">

                                                    </CheckBox>


                                                    <View
                                                        android:layout_width="2dp"
                                                        android:layout_height="match_parent"
                                                        android:background="@color/view" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="1.30"
                                                        android:fontFamily="@font/poppins_semibold"
                                                        android:gravity="center"
                                                        android:text="Patient Info"
                                                        android:textColor="@color/navColor"
                                                        android:textSize="15sp">

                                                    </TextView>

                                                    <View
                                                        android:layout_width="2dp"
                                                        android:layout_height="match_parent"
                                                        android:background="@color/view" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="1.30"
                                                        android:fontFamily="@font/poppins_semibold"
                                                        android:gravity="center"
                                                        android:text="Test Name"
                                                        android:textColor="@color/navColor"
                                                        android:textSize="15sp">

                                                    </TextView>

                                                    <View
                                                        android:layout_width="2dp"
                                                        android:layout_height="match_parent"
                                                        android:background="@color/view" />



                      -->
                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="1"
                                                        android:fontFamily="@font/poppins_semibold"
                                                        android:gravity="center"
                                                        android:text="Sample Id"
                                                        android:textColor="@color/navColor"
                                                        android:textSize="15sp">

                                                    </TextView>

                                                    <View
                                                        android:layout_width="2dp"
                                                        android:layout_height="match_parent"
                                                        android:background="@color/view" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="1"
                                                        android:fontFamily="@font/poppins_semibold"
                                                        android:gravity="center"
                                                        android:text="Date&amp;Time"
                                                        android:textColor="@color/navColor"
                                                        android:textSize="15sp">

                                                    </TextView>



                                                    <View
                                                        android:layout_width="2dp"
                                                        android:layout_height="match_parent"
                                                        android:background="@color/view" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="1"
                                                        android:fontFamily="@font/poppins_semibold"
                                                        android:gravity="center"
                                                        android:text="Status"

                                                        android:textColor="@color/navColor"
                                                        android:textSize="15sp">

                                                    </TextView>


                                                </LinearLayout>

                                                <androidx.core.widget.NestedScrollView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content">

                                                        <androidx.recyclerview.widget.RecyclerView
                                                            android:id="@+id/sampleDispatchrecycleview"
                                                            android:layout_width="530dp"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginBottom="10dp"
                                                            android:scrollbars="horizontal"
                                                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                                                    </LinearLayout>
                                                </androidx.core.widget.NestedScrollView>


                                            </LinearLayout>


                                        </HorizontalScrollView>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>


                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progressbar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-7dp"
                                android:backgroundTint="@color/red"
                                android:indeterminate="true"
                                android:indeterminateTint="#1a09d6"
                                android:max="100" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llLabTestBottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/bottom"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_weight="0.20"
                                android:orientation="horizontal"
                                tools:ignore="RtlCompat"
                                android:paddingLeft="10dp">


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/disaptch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="10dp"
                                    app:cardBackgroundColor="@color/orange"
                                    app:cardCornerRadius="8dp"
                                    tools:ignore="RtlCompat">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ic_arrow_forward_white"
                                        android:drawablePadding="5dp"
                                        android:padding="10dp"
                                        android:text="Dispatch"
                                        android:textColor="@color/white">

                                    </TextView>


                                </androidx.cardview.widget.CardView>

                                <!-- <ImageView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/disaptch"
                                     android:layout_marginStart="5dp"
                                     android:src="@drawable/dispatch">

                                 </ImageView>

                                 <ImageView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/rejected"
                                     android:layout_marginStart="5dp"
                                     android:src="@drawable/reject">

                                 </ImageView>
                                 <ImageView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/print"
                                     android:layout_marginStart="5dp"
                                     android:src="@drawable/print">

                                 </ImageView>
     -->


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/rejected"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardBackgroundColor="@color/red"
                                    app:cardCornerRadius="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ic_thumbdown"
                                        android:drawablePadding="5dp"
                                        android:padding="10dp"
                                        android:text="Reject"
                                        android:textColor="@color/white">

                                    </TextView>


                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/print"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardBackgroundColor="@color/colorPrimaryDark"
                                    app:cardCornerRadius="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ic_printing_tool"
                                        android:drawablePadding="5dp"
                                        android:padding="10dp"
                                        android:text="Print"
                                        android:textColor="@color/white">

                                    </TextView>
                                </androidx.cardview.widget.CardView>


                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </FrameLayout>


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/_40sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_filter"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:padding="5dp"
                            android:text="Filter"
                            android:textSize="21sp"
                            tools:ignore="HardcodedText" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            tools:ignore="RtlCompat"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Test"
                                android:textColor="@color/colorPrimary">

                            </TextView>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/test_spinner"
                                    style="@style/Widget.AppCompat.Spinner.Underlined"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:hint="Test"
                                    android:inputType="textNoSuggestions"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textSize="18sp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/calendarEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/edit_text_bottom_border"
                                    android:drawableRight="@drawable/ic_calendar"
                                    android:focusable="false"
                                    android:hint="Date Range"
                                    android:padding="10dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Assigned To"
                                android:textColor="@color/colorPrimary">

                            </TextView>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp">

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/assignedToSpinner"
                                    style="@style/Widget.AppCompat.Spinner.Underlined"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:hint="Test"
                                    android:inputType="textNoSuggestions"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textSize="18sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/searchUsingMobileNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableEnd="@drawable/ic_search"
                                    android:fontFamily="@font/poppins"
                                    android:hint="PIN/Mobile No"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/searchOrderNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableEnd="@drawable/ic_search"
                                    android:fontFamily="@font/poppins"
                                    android:hint="Order Process"
                                    android:inputType="textNoSuggestions"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:paddingEnd="@dimen/_3sdp">


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/searchButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardBackgroundColor="@color/Skyblue"
                                    app:cardCornerRadius="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_search_white"
                                        android:drawablePadding="7dp"
                                        android:fontFamily="@font/poppins"
                                        android:padding="7dp"
                                        android:text="Search"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText" />
                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/clearCardView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardBackgroundColor="@color/clear"
                                    app:cardCornerRadius="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_eraser"
                                        android:drawablePadding="7dp"
                                        android:fontFamily="@font/poppins"
                                        android:padding="7dp"
                                        android:text="Clear"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        tools:ignore="HardcodedText" />
                                </androidx.cardview.widget.CardView>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.cardview.widget.CardView>


        </com.google.android.material.navigation.NavigationView>


    </androidx.drawerlayout.widget.DrawerLayout>

</layout>
