<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLinearLayout"
        android:background="@drawable/edittext_border_white"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:gravity="center"
            android:id="@+id/serialNumberTextView"
            android:fontFamily="@font/poppins_bold"
            android:text="S.No"
            android:textSize="11sp">

        </TextView>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.40"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:text="jhgfgfgbnbvvgvgvggggggggvgvvvvvvvvv"
            android:id="@+id/textProcess"
            android:textColor="@color/navColor"
            android:textSize="11sp">

        </TextView>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/institution_spinner"
            android:layout_width="0dp"
            android:layout_weight="1.10"
            android:textColor="@color/navColor"
            android:textSize="11sp"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/lab_spinner"
            android:layout_width="0dp"
            android:enabled="false"
            android:layout_weight="1"
            android:textColor="@color/navColor"
            android:textSize="11sp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />




    </LinearLayout>


</LinearLayout>