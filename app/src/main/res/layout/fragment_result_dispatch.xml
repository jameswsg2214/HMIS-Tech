<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="viewModel"
            type="com.hmis_tn.lims.ui.lmis.lmisResultDispatch.viewmodel.ResultDispatchViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:openDrawer="end">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/searchDrawerCardView"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="@dimen/_5sdp"
                        android:text="Result Dispatch"
                        android:textColor="@color/hmis_background"
                        android:textSize="@dimen/_15sdp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/searchDrawerCardView"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="22dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_favourite_back_arrow"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/view" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/result_dispatch_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/white">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="2dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="4.10">


                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="800dp"
                                    android:layout_height="35dp"
                                    android:layout_marginEnd="5dp"
                                    android:background="@drawable/edittext_border_white"
                                    android:orientation="horizontal"
                                    android:weightSum="6">

                                    <TextView
                                        android:id="@+id/serialNum"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.50"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="S.No"
                                        android:textColor="@color/navColor"
                                        android:textSize="@dimen/dr_medium_text">

                                    </TextView>
                                    <!--  <View
                                          android:layout_width="2dp"
                                          android:layout_height="match_parent"
                                          android:background="@color/view" />
                                      <TextView
                                          android:layout_width="0dp"
                                          android:layout_height="match_parent"
                                          android:layout_weight="1"
                                          android:fontFamily="@font/poppins_bold"
                                          android:gravity="center"
                                          android:text="PIN"
                                          android:id="@+id/pinNum"
                                          android:textColor="@color/navColor"
                                          android:textSize="14sp">

                                      </TextView>-->


                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/view" />

                                    <TextView
                                        android:id="@+id/patient_info"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.30"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="Patient Info"
                                        android:textColor="@color/navColor"
                                        android:textSize="@dimen/dr_medium_text">

                                    </TextView>

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/view" />


                                    <TextView
                                        android:id="@+id/orderedNUm"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.90"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="Order No"
                                        android:textColor="@color/navColor"
                                        android:textSize="@dimen/dr_medium_text">

                                    </TextView>

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/view" />


                                    <TextView
                                        android:id="@+id/approvedBy"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.30"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="Approved By"
                                        android:textColor="@color/navColor"
                                        android:textSize="@dimen/dr_medium_text">

                                    </TextView>

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/view" />

                                    <TextView
                                        android:id="@+id/TestName"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.30"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="Test Name"
                                        android:textColor="@color/navColor"
                                        android:textSize="@dimen/dr_medium_text">

                                    </TextView>

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/view" />


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.70"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:gravity="center"
                                        android:text="Action"
                                        android:textColor="@color/navColor"
                                        android:textSize="@dimen/dr_medium_text">

                                    </TextView>


                                </LinearLayout>

                                <androidx.core.widget.NestedScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"

                                        android:layout_height="match_parent">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/sampleDispatchrecycleview"
                                            android:layout_width="800dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginBottom="10dp"
                                            android:scrollbars="horizontal"
                                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                                    </LinearLayout>
                                </androidx.core.widget.NestedScrollView>


                            </LinearLayout>


                        </HorizontalScrollView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7dp"
                    android:backgroundTint="@color/red"
                    android:indeterminate="true"
                    android:indeterminateTint="#1a09d6"
                    android:max="100" />


            </LinearLayout>


        </FrameLayout>


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/_40sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_filter"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:padding="5dp"
                            android:text="Filter"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/qucik_search"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_search"
                                android:fontFamily="@font/poppins"
                                android:hint="@string/search_with_3_letters"
                                android:inputType="textNoSuggestions"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:id="@+id/advanceSearchText"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="end"
                            android:text="Advance Search"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <LinearLayout
                            android:id="@+id/advanceSearchLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/patient_details_pin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:hint="PIN"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/searchUsingOrderNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:hint="Order Number"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/calendarEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/edit_text_bottom_border"
                                    android:drawableRight="@drawable/ic_calendar"
                                    android:focusable="false"
                                    android:hint="Date"
                                    android:padding="10dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:paddingEnd="@dimen/_3sdp">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/searchButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardBackgroundColor="@color/Skyblue"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_search_white"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                    android:padding="7dp"
                                    android:text="Search"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                app:cardBackgroundColor="@color/clear"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardCornerRadius="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_eraser"
                                    android:drawablePadding="7dp"
                                    android:fontFamily="@font/poppins"
                                    android:padding="7dp"
                                    android:text="Clear"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    tools:ignore="HardcodedText" />
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.cardview.widget.CardView>


        </com.google.android.material.navigation.NavigationView>


    </androidx.drawerlayout.widget.DrawerLayout>

</layout>