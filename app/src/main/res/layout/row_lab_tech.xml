<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/mainLinearLayout"
    android:weightSum="7"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/serialNoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:fontFamily="@font/poppins_semibold"
            android:text="S.No"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />


        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/labname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.20"
            android:fontFamily="@font/poppins_semibold"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:id="@+id/type_spinner"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="10dp"
            android:gravity="center"
            style="@style/Widget.AppCompat.Spinner"
            android:textColor="@color/black"
            android:textSize="11sp"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/Specimen"
            style="@style/Widget.AppCompat.Spinner"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="11sp"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />


        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/Testmethod"
            style="@style/Widget.AppCompat.Spinner"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="11sp"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:id="@+id/OrderToLocation"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="11sp"
            style="@style/Widget.AppCompat.Spinner"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.80"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/commentsImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_comment_yellow_24dp" />

                <ImageView
                    android:id="@+id/deleteImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_delete_black" />


        </LinearLayout>


</LinearLayout>