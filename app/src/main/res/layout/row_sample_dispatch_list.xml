<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLinearLayout"
        android:background="@drawable/edittext_border_white"
        android:orientation="horizontal"
        android:weightSum="6">

        <CheckBox
            android:id="@+id/selectAllCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/dr_medium_text"
            android:layout_weight="0.40"
            android:textColor="@color/navColor">

        </CheckBox>


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.30"
            android:id="@+id/patient_info"
            android:gravity="center"
            android:padding="10dp"
            android:text="Patient Info"

            android:fontFamily="@font/poppins"
            android:textSize="@dimen/dr_medium_text"
            android:textColor="@color/navColor">

        </TextView>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.30"
            android:gravity="center"
            android:id="@+id/testName"
            android:padding="10dp"

            android:text="Test Name"
            android:textColor="@color/navColor"

            android:fontFamily="@font/poppins"
            android:textSize="@dimen/dr_medium_text">

        </TextView>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/sample_id"
            android:gravity="center"
            android:text="Sample Id"
            android:padding="10dp"

            android:textColor="@color/navColor"

            android:fontFamily="@font/poppins"
            android:textSize="@dimen/dr_medium_text">

        </TextView>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/dateText"
            android:text="Date&amp;Time"
            android:padding="10dp"

            android:textColor="@color/navColor"

            android:fontFamily="@font/poppins"
            android:textSize="@dimen/dr_medium_text">

        </TextView>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Status"
            android:padding="10dp"

            android:id="@+id/statueText"
            android:textColor="@color/navColor"

            android:fontFamily="@font/poppins"
            android:textSize="@dimen/dr_medium_text">

        </TextView>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/view" />








    </LinearLayout>


</LinearLayout>