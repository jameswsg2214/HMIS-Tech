<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:background="@color/fadeBlue"
        android:layout_height="wrap_content"
        tools:ignore="RtlCompat">


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/navColor"
          >

        </CheckBox>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@+id/checkbox"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv1"
                android:text="@string/labTestHeading"
                android:background="@color/fadeBlue"
                style="@style/SimpleTextView3"
                android:fontFamily="@font/poppins_bold"
                android:layout_centerVertical="true"
                >
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv2"
                    android:text="listmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmbbbbbbb"
                    android:background="@color/fadeBlue"
                    style="@style/SmallTextView"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/status"
                    android:singleLine="false"
                    >
                </TextView>


                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_arrow_left"
                    android:gravity="center"
                    android:text="Created"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:textSize="@dimen/dr_small_text"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/hmis_background"
                    android:background="@drawable/status_border"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat">

                </TextView>



            </RelativeLayout>


        </LinearLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>
